{
  "name": "rti-trading-backend-with-design-studio",
  "version": "1.0.0",
  "description": "RTi Cashflowops Trading Backend with Design Studio API - Complete Edition",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'Backend build complete'",
    "deploy": "node deploy.js",
    "seed": "node seed-database.js",
    "backup": "node backup-database.js",
    "migrate": "node migrate-database.js",
    "logs": "railway logs",
    "monitor": "node monitor.js",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "security": "npm audit",
    "update": "npm update && npm audit fix"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.0",
    "sharp": "^0.32.0",
    "socket.io": "^4.8.1",
    "stripe": "^14.5.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/rti-trading-backend"
  },
  "keywords": [
    "trading",
    "backend",
    "api",
    "design-studio",
    "subscription",
    "payments",
    "real-time",
    "crypto",
    "alerts",
    "railway",
    "bulletproof",
    "jwt",
    "authentication",
    "mongodb"
  ],
  "author": "RTi Cashflowops",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/rti-trading-backend/issues"
  },
  "homepage": "https://cashflowops.pro",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,mjs}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js",
      "**/?(*.)+test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "routes/",
      "middleware/",
      "models/"
    ],
    "ext": "js,mjs,json",
    "ignore": [
      "node_modules/",
      "tests/",
      "coverage/",
      "uploads/"
    ],
    "delay": 2000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "config": {
    "port": 3000,
    "db_timeout": 30000,
    "jwt_expiry": "24h",
    "upload_limit": "10mb",
    "rate_limit": 100
  }
}
